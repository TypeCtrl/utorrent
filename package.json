{
  "name": "@ctrl/utorrent",
  "version": "0.0.0-placeholder",
  "description": "TypeScript api wrapper for utorrent using got",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/utorrent",
  "homepage": "https://utorrent.vercel.app",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "keywords": [
    "utorrent",
    "typescript"
  ],
  "scripts": {
    "lint": "eslint --ext .js,.ts, .",
    "lint:fix": "eslint --fix --ext .js,.ts, .",
    "prepare": "npm run build",
    "build": "tsc -p tsconfig.build.json",
    "build:docs": "typedoc --out docs --hideGenerator --target ES6 --mode file src && touch docs/.nojekyll",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:ci": "npm run test -- --ci --reporters=default --reporters=jest-junit --coverage",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@ctrl/shared-torrent": "^3.0.5",
    "@ctrl/torrent-file": "^1.3.3",
    "form-data": "^4.0.0",
    "got": "^11.8.2",
    "tough-cookie": "^4.0.0",
    "@ctrl/url-join": "^1.0.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "7.14.0",
    "@babel/preset-typescript": "7.13.0",
    "@ctrl/eslint-config": "2.0.8",
    "@jest/globals": "27.0.3",
    "@types/node": "15.12.2",
    "@types/tough-cookie": "4.0.0",
    "jest": "27.0.4",
    "jest-junit": "12.1.0",
    "typedoc": "0.21.0-beta.2",
    "typescript": "4.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageProvider": "v8"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "master"
  },
  "engines": {
    "node": ">=10.19.0"
  }
}
